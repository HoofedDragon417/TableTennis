<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.game.GameFragment">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_player_one_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:hint="@string/player_hint" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_player_two_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:hint="@string/player_hint" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_player_one_pitcher"
        android:layout_width="25dp"
        android:layout_height="25dp"
        app:layout_constraintStart_toEndOf="@id/tv_player_one_name"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_player_two_pitcher"
        android:layout_width="25dp"
        android:layout_height="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/tv_player_two_name" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_player_one_score"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="60dp"
        android:background="#2196F3"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="150sp"
        app:layout_constraintBottom_toTopOf="@id/tv_player_two_score"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_player_one_name"
        tools:hint="@string/hint_zero" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_player_two_score"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="60dp"
        android:layout_marginEnd="60dp"
        android:layout_marginBottom="60dp"
        android:background="#2196F3"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="150sp"
        app:layout_constraintBottom_toTopOf="@id/tv_player_two_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_player_one_score"
        tools:hint="@string/hint_zero" />

</androidx.constraintlayout.widget.ConstraintLayout>